<div id="detalhe_left">
	 <%= image_tag @evento.logo.url(:medium) if @evento.logo? %>
</div>

<div id="detalhe_right" >
	<strong><%= @evento.nome %></strong><br />
	<small><%= nome_do_estado @evento.estado %></small>
    <p><span>Data:</span><%= @evento.data.day %>/<%= l(@evento.data, :format => :month) %></p>
	<small><%= evento_do @evento.grupo %></small>
	<br/><br/><br/>

	<p><span>Tags:</span>

			<% @evento.tags.each do |tag| %>
			<%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => "tag tags" %>
			<% end %>

	</p>

	<p><span>Site:</span><a href="<%= @evento.site %>" target="blank"><%= @evento.site %></a></p>
	<p><span>Twitter:</span><a href="http://www.twitter.com/<%= @evento.twitter %>" target="blank">@<%= @evento.twitter %></a></p>
</div>

<div style="clear:both;"></div>

<div id="detalhe_desc" >
	<%= @evento.descricao %>
</div>

<p class="desc_button"><%= link_to '< Voltar para home', root_path %></p>

<hr />
<p>Comente sobre esse evento:</p>
<%=  flash[:comentario] %>
<br />

<% if @evento.comentarios.empty?%>
 <p>Seja o primeiro a comentar sobre esse evento!</p>
<% else  %>

	<% for comentario in @evento.comentarios %>
		<br/>
		<div class="comentario">
			<img src="<%= Twitter.user(comentario.twitter).profile_image_url %>" />
			<p class="comentario_descricao"><%= Twitter.user(comentario.twitter).name %></p><br/>
			<div style="clear:both;"></div>
	
			<p class="comentario_descricao"><%= comentario.descricao %></p>
			<p class="comentario_data"><%= comentario.created_at.strftime("Enviado em %m/%d/%Y %I:%M%p") %></p>

		</div>
	<% end %>

<% end %>

<br/> <br/>
<% form_for @comentario, :url => {:action => "comentar"}, :html => { :class => 'resource_form' } do |f| %>
	<input type="hidden" name="comentario[evento_id]" value="<%= @evento.id %>"/>
	<p>
		<label for="twitter">Seu Twitter: (sem @)</label><br />
		<input type="text" name="comentario[twitter]"/>
	</p>
	<p>
		<label for="descricao">Coment√°rio: </label><br />
		<textarea type="text" name="comentario[descricao]"> </textarea>
	</p>
	<br/>
	<input type="submit" value="Comentar"/>

<% end  %>	